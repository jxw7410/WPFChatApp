<local:BasePage x:TypeArguments="local:ErrorPageViewModel" x:Class="WPFChatApp.ErrorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFChatApp"
        mc:Ignorable="d"
        d:DesignHeight="700" d:DesignWidth="700"
        Title="ErrorPage">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint ="1,0">
                <GradientStop Color="Azure" Offset="1.0"/>
                <GradientStop Color="SkyBlue" Offset="0.5"/>
                <GradientStop Color="Azure" Offset="0.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" 
            Text="{Binding ErrorString}"
            FontSize="25"
            FontWeight="Bold"/>
        
    </Grid>
</local:BasePage>
