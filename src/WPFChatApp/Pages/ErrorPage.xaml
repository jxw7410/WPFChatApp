<local:BasePage x:TypeArguments="core:ErrorPageViewModel" x:Class="WPFChatApp.ErrorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFChatApp"
        xmlns:core="clr-namespace:WPFChatApp.Core;assembly=WPFChatApp.Core"
        mc:Ignorable="d"
        d:DesignHeight="700" d:DesignWidth="700"
        Title="ErrorPage">
    <Grid>
        <Grid.Background>
            Transparent
        </Grid.Background>
        <TextBlock 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" 
            Text="{Binding ErrorString}"
            FontSize="25"
            FontWeight="Bold"/>
        
    </Grid>
</local:BasePage>
